#{{{ General settings
	startup_message off
	msgwait 6
	nextscreen
	exec /usr/bin/rpws init 2 -k
#}}}

set winname class

#{{{ Bindings
	# Escape key
	escape Super_L

	# Workspace navigator
	bind M-1 exec rpws 1
	bind M-2 exec rpws 2
	bind M-3 exec rpws 3

	# Unbind keys
	unbind C-k
	unbind C-K
	unbind C-w
	unbind C-g
	unbind minus
	unbind A
	unbind C-A
	unbind Return
	unbind C-Return
	unbind a
	unbind C-a
	unbind b
	unbind C-b
	unbind C-c
	unbind C-exclam
	unbind i
	unbind C-i
	unbind l
	unbind C-l
	unbind C-m
	unbind C-apostrophe
	unbind space
	unbind C-space
	unbind C-v
	unbind V
	unbind C-V
	unbind C-s
	unbind S
	unbind C-S
	unbind C-f
	unbind C-r
	unbind C-underscore
	unbind C-u
	unbind C-x
    unbind R

	# Windows administration
	bind o only
	bind C-n inext
	bind C-p iprev

	# Frame administration
	bind s vsplit
	bind v hsplit
    bind Q remove
	
	# Launchers - switching
	bind e exec ~/.scripts/ratpoison/launcher.sh firefox
	bind c exec ~/.scripts/ratpoison/launcher.sh terminal
    bind d exec ~/.scripts/ratpoison/launcher.sh libreoffice

	# Info
	bind F curframe
	bind w windows
    bind a exec ratpoison -c "echo $( ~/.scripts/ratpoison/echo_info.sh )"
    bind A exec ratpoison -c "echo $( ~/.scritps/ratpoison/echo_cal.sh )"

	# Tmux vim-like navigator
	definekey top C-k exec ~/.scripts/ratpoison/rat_tmux-navigator.sh rat up
	definekey top C-j exec ~/.scripts/ratpoison/rat_tmux-navigator.sh rat down
	definekey top C-l exec ~/.scripts/ratpoison/rat_tmux-navigator.sh rat right
	definekey top C-h exec ~/.scripts/ratpoison/rat_tmux-navigator.sh rat left

	# Unsorted
	bind Escape abort
#}}}
